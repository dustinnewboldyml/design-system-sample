{
	"compilerOptions": {
		"plugins": [
			{
				"name": "typescript-lit-html-plugin"
			}
		],
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es6",
		"allowJs": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	]
}
